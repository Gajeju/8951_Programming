#include<AT89X51.h>

unsigned char table[]={0x40, 0x79, 0x24, 0x30, 0x19, 0x12, 0x02, 0x78, 0x00, 0x10, 0x88, 0x83, 0xc6, 0xa1, 0x86, 0x8e};


void delay(unsigned int ms)
{
    unsigned int i, j;
    for (i = 0; i <= ms; i++)
        for (j = 0; j <= 125; j++);
}

void main(void)
{
    unsigned int input;
    unsigned int output1, output2;



    for (;;)
    {
        input = P0;
        output1 = input % 16;
        output2 = input / 16;

        delay(1);
        P2 = 0xef;
        P1 = table[output1];

        delay(1);
        P2 = 0xdf;
        P1 = table[output2];


    }
}
